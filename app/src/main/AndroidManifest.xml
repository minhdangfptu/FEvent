<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/fevent_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/fevent_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.FEvent"
        tools:targetApi="31">

        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".ui.team.TeamListActivity"
            android:exported="false"
            android:label="Quản lý Ban"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".ui.team.AddEditTeamActivity"
            android:exported="false"
            android:parentActivityName=".ui.team.TeamListActivity" />
        <activity
            android:name=".ui.team.TeamDetailActivity"
            android:exported="false"
            android:parentActivityName=".ui.team.TeamListActivity" />
        <!-- Thêm vào trong thẻ <application> -->
        <activity
            android:name=".ui.team.AssignUserActivity"
            android:exported="false"
            android:parentActivityName=".ui.team.TeamDetailActivity" />
    </application>
</manifest>