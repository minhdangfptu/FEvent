<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/fevent_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/fevent_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.FEvent"
        tools:targetApi="31">

        <!-- Màn hình khởi chạy (LAUNCHER) -->
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Các Activity quản lý Ban -->
        <activity
            android:name=".ui.team.TeamListActivity"
            android:exported="false"
            android:label="Quản lý Ban"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".ui.team.AddEditTeamActivity"
            android:exported="false"
            android:parentActivityName=".ui.team.TeamListActivity" />
        <activity
            android:name=".ui.team.TeamDetailActivity"
            android:exported="false"
            android:parentActivityName=".ui.team.TeamListActivity" />
        <activity
            android:name=".ui.team.AssignUserActivity"
            android:exported="false"
            android:parentActivityName=".ui.team.TeamDetailActivity" />

        <!-- Các Activity quản lý Sự kiện -->
        <activity
            android:name=".ui.event.EventListActivity"
            android:exported="false"
            android:label="Quản lý Sự kiện"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".ui.event.AddEditEventActivity"
            android:exported="false"
            android:parentActivityName=".ui.event.EventListActivity" />

        <activity
            android:name=".ui.feedback.UserFeedbackListActivity"
            android:exported="false"
            android:label="Đánh giá thành viên"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".ui.feedback.AddUserFeedbackActivity"
            android:exported="false"
            android:parentActivityName=".ui.feedback.UserFeedbackListActivity" />

    </application>

</manifest>